@echo off

if not exist BIN mkdir BIN
del BIN\*.*

if not exist DIST mkdir DIST
del DIST\*.*
cd DIST
if not exist FIRMDEMO mkdir FIRMDEMO
del FIRMDEMO\*.*
cd..

echo.
echo [ Building ZZT.EXE ]
echo.
TPC /B /EBIN /GD /ISRC_W27 /USRC_W27 SRC_W27\ZZT.PAS
if errorlevel 1 goto error
echo.
echo [ Compressing ZZT.EXE ]
echo.
cd BIN
..\TOOLS\UPX.EXE --8086 ZZT.EXE
cd ..

echo.
echo [ Creating DIST/ ]
echo.

copy BIN\ZZT.EXE DIST\ZZT.EXE
copy BIN\ZZT.DAT DIST\ZZT.DAT
copy LICENSE.TXT DIST\LICENSE.TXT
copy OOP-QR.TXT DIST\OOP-QR.TXT
copy README.TXT DIST\README.TXT
copy SRC_W27\TEMPLATE.CFG DIST\TEMPLATE.CFG
copy SRC_W27\TEMPLATE.INI DIST\TEMPLATE.INI
copy SRC_W27\EXTENDED.CFG DIST\EXTENDED.CFG
copy SRC_W27\FIRMDEMO.INI DIST\FIRMDEMO\FIRMDEMO.INI
copy SRC_W27\FIRMDEMO.CFG DIST\FIRMDEMO\FIRMDEMO.CFG
copy SRC_W27\EXAMPLE.OBJ DIST\FIRMDEMO\EXAMPLE.OBJ
copy SRC_W27\WONKY.OBJ DIST\FIRMDEMO\WONKY.OBJ
copy SRC_W27\ANGRY.OBJ DIST\FIRMDEMO\ANGRY.OBJ
copy SRC_W27\GREET.OBJ DIST\FIRMDEMO\GREET.OBJ
copy SRC_W27\THING.OBJ DIST\FIRMDEMO\THING.OBJ
copy SRC_W27\BEARBUL.OBJ DIST\FIRMDEMO\BEARBUL.OBJ
copy SRC_W27\LICENSE.TXT DIST\FIRMDEMO\LICENSE.TXT
copy FIRMDEMO.ZZT DIST\FIRMDEMO\FIRMDEMO.ZZT
goto done
:error
echo.
echo [ Error detected! Stopping. ]
:done
copy DIST\ZZT.EXE DIST\FWEAVE27.EXE

