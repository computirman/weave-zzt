@echo off

if not exist BIN mkdir BIN
del BIN\*.*

if not exist DIST mkdir DIST
del DIST\*.*
cd DIST
if not exist WEAVEDMO mkdir WEAVEDMO
del WEAVEDMO\*.*
cd..

echo.
echo [ Building ZZT.EXE ]
echo.
TPC /B /EBIN /GD /ISRC_W28 /USRC_W28 SRC_W28\ZZT.PAS
if errorlevel 1 goto error
echo.
echo [ Compressing ZZT.EXE ]
echo.
cd BIN
..\TOOLS\UPX.EXE --8086 ZZT.EXE
cd ..

echo.
echo [ Creating DIST/ ]
echo.

copy BIN\ZZT.EXE DIST\ZZT.EXE
copy BIN\ZZT.DAT DIST\ZZT.DAT
copy LICENSE.TXT DIST\LICENSE.TXT
copy OOP-QR.TXT DIST\OOP-QR.TXT
copy README.TXT DIST\README.TXT
copy SRC_W28\TEMPLATE.CFG DIST\TEMPLATE.CFG
copy SRC_W28\TEMPLATE.INI DIST\TEMPLATE.INI
copy SRC_W28\EXTENDED.CFG DIST\EXTENDED.CFG
copy SRC_W28\WEAVEDMO.INI DIST\WEAVEDMO\WEAVEDMO.INI
copy SRC_W28\WEAVEDMO.CFG DIST\WEAVEDMO\WEAVEDMO.CFG
copy SRC_W28\EXAMPLE.OBJ DIST\WEAVEDMO\EXAMPLE.OBJ
copy SRC_W28\WONKY.OBJ DIST\WEAVEDMO\WONKY.OBJ
copy SRC_W28\ANGRY.OBJ DIST\WEAVEDMO\ANGRY.OBJ
copy SRC_W28\GREET.OBJ DIST\WEAVEDMO\GREET.OBJ
copy SRC_W28\THING.OBJ DIST\WEAVEDMO\THING.OBJ
copy SRC_W28\BEARBUL.OBJ DIST\WEAVEDMO\BEARBUL.OBJ
copy SRC_W28\LICENSE.TXT DIST\WEAVEDMO\LICENSE.TXT
copy SRC_W28\Using_Weave_with_Zeta.htm DIST\Using_Weave_with_Zeta.htm
copy WEAVEDMO.ZZT DIST\WEAVEDMO\WEAVEDMO.ZZT
goto done
:error
echo.
echo [ Error detected! Stopping. ]
:done
copy DIST\ZZT.EXE DIST\FWEAVE28.EXE

